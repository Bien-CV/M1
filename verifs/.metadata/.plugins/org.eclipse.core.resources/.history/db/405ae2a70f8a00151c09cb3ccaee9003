package tests;

import static org.junit.Assert.*;
import static org.mockito.Mockito.*;

import org.junit.Before;
import org.junit.Test;



import fr.univnantes.cta.impl.AirwayImpl;
import fr.univnantes.cta.impl.VORImpl;

public class Airway_Test {
	protected AirwayImpl airway;
	protected VORImpl start;
	protected VORImpl stop;
	
	@Before
	public void setUp() throws Exception {
		start = mock(VORImpl.class);
		stop = mock(VORImpl.class);
		airway = new AirwayImpl(start,stop);
		when(start.distanceTo(stop)).thenReturn(42.);
		when(start.getName()).thenReturn("start");
		when(stop.getName()).thenReturn("stop");
	}


	@Test
	public void testGetDistance() {
		assertTrue(airway.getDistance()==42.);
	}

	@Test
	public void testDeparture() {
		assertTrue(airway.departure().equals(start));
	}

	@Test
	public void testArrival() {
		assertTrue(airway.arrival().equals(stop));
	}

	@Test
	public void testGetVORDepart() {
		assertTrue(airway.GetVORDepart().equals("start"));
	}

	@Test
	public void testGetVORArrive() {
		assertTrue(airway.GetVORArrive().equals("stop"));
	}

}
